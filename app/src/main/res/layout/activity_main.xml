<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gatech.juniordesign.juniordesignpart2.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="home page here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SettingsButton"
        android:layout_width="96dp"
        android:layout_height="49dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/settings_button_name"
        android:onClick="goToSettingsPageActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SeeBusinessListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goToBusinessListActivity"
        android:text="See Business List Page"
        android:paddingTop="50dp"/>

    <Button
        android:id="@+id/SeeBusinessDetailPageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See Business Detail Page"
        android:onClick="goToBusinessDetailPageActivity"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="57dp" />



</android.support.constraint.ConstraintLayout>
